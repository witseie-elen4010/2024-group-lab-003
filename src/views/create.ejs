<%- include('partials/header') -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Room</title>
    <style>
    .containerl {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        padding-top: 12%;
    }
    .mb-3 {
        display: flex;
        gap: 10px;
    }
    .form-control {
        width: 100%;
        padding-top: 20px;
        padding-bottom: 20px;
        height: 50px; /* Adjust this value to increase the height of the input box */
        font-size: 1.5rem; /* Adjust this value to increase the text size */
        border: 1px solid #ccc; /* Optional: adds a border to the input box */
        border-radius: 4px; /* Optional: rounds the corners of the input box */
    }

    </style>
</head>
<body>
    <div class="containerl mt-5">
        <h2 class="mb-3" style="padding-bottom: 25px">Create A Room!</h2>
        <div class="mb-3">
            <!-- <h3 for="nickname" class="form-label" >Nickname:</h3> -->
            <input type="text" class="form-control" id="nickname" placeholder="Enter Your Nickname" required>
            <button id="create" class="btn btn-primary" style="width:200px">Create Room</button>
        </div>
        
        <p id="gameCode" class="mt-3" style="display: none;">Game Code: <span id="code"></span></p>
    </div>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Link to external JavaScript file -->
    <script src="../../scripts/create.js"></script>
</body>
</html>
<%- include('partials/footer') -%>