<%- include('partials/header') -%>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Join Game</title>
    <style>
    .containerd {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        justify-content: center;
        height: 100%;
        padding-top: 12%;
    }
    .mb-3 {
        display: flex;
        gap: 10px;
    }
    .form-control {
        width: 100%;
        padding-top: 20px;
        padding-bottom: 20px;
        height: 50px; /* Adjust this value to increase the height of the input box */
        font-size: 1.5rem; /* Adjust this value to increase the text size */
        border: 1px solid #ccc; /* Optional: adds a border to the input box */
        border-radius: 4px; /* Optional: rounds the corners of the input box */
    }

    </style>
</head>
<body>
    <div class="containerd mt-5">
        <h2 class="mb-3">Join Game</h2>
        <form id="gameForm">
            <div class="mb-3">
                <!-- <label for="nickname" class="form-label">Nickname</label> -->
                <input type="text" class="form-control" id="nickname" placeholder="Enter Your Nickname" required>
            </div>
            <div class="mb-3">
                <!-- <label for="roomCode" class="form-label">Room Code</label> -->
                <input type="text" class="form-control" id="roomCode" placeholder="Enter Game Code" required>
            </div>
            <button type="button" id="joinRoom" class="btn btn-primary" style="justify-content: center">Join Game</button>
        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/join.js"></script>
</body>
</html>
<%- include('partials/footer') -%>